<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBkColor"
    android:focusableInTouchMode="true"
    tools:context=".ui.pelanggan.auth.LoginPelangganActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="3"
            android:background="@drawable/login_shape_bk"
            android:orientation="vertical"
            android:weightSum="12">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_login_bk"
                android:contentDescription="login background" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gojahit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/gilroy_bold"
            android:maxLines="1"
            android:text="GoJahit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gojahit"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_card"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_bold"
                android:text="Login Pengguna"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sign_in" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_email_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/primaryTextColor"
                app:errorEnabled="true"
                app:hintTextColor="@color/primaryTextColor">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_email_pelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/gilroy_medium"
                    android:hint="Email"
                    android:text="dinda@gmail.com"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_password_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/primaryTextColor"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:errorEnabled="true"
                app:hintTextColor="@color/primaryTextColor"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/primaryTextColor">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_password_pelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/gilroy_medium"
                    android:hint="Password"
                    android:text="dinda1234"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    app:hintAnimationEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--                        <TextView-->
            <!--                            android:layout_width="wrap_content"-->
            <!--                            android:layout_height="wrap_content"-->
            <!--                            android:layout_gravity="end"-->
            <!--                            android:layout_marginTop="10dp"-->
            <!--                            android:text="Forgot Password?"-->
            <!--                            android:fontFamily="@font/gilroy_medium"-->
            <!--                            android:textColor="@color/primaryTextColor"-->
            <!--                            android:textSize="12sp" />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button_bk"
                android:fontFamily="@font/gilroy_medium"
                android:text="Login"
                android:textAppearance="@style/button_login_register"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/login_pelanggan_text"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>